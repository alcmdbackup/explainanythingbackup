{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npx eslint $FILE_PATH --quiet || true"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx eslint $FILE_PATH --quiet || true"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "if git diff HEAD --name-only | grep -vE '\\.(md|json)$' | grep -q .; then npx tsc --noEmit && npm run lint && npm test; fi"
          }
        ]
      }
    ]
  }
}

